<launch>
  <!-- Arguments -->
  <arg name="map_file" default="$(find zm_robot_navigation)/maps/warehouse.yaml"/>
  <arg name="open_rviz" default="true"/>
  <arg name="move_forward_only" default="false"/>

  <!-- convert joint states to TF transforms for rviz, etc -->
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" respawn="false" output="screen">
     <param name="publish_frequency" type="double" value="50.0" />
  </node>

  <!-- caculate zm_robot wheel vel in Rviz   -->
  <node name="zm_robot_wheel_vel" pkg="zm_robot_control" type="zm_robot_controller_wheel_vel"/>

  <!-- Show zm_robot odom in Rviz   -->
  <node name="zm_robot_odom" pkg="zm_robot_pid_control" type="zm_robot_pid_odom"/>

  <node pkg="ira_laser_tools" name="laserscan_multi_merger" type="laserscan_multi_merger" output="screen">
    <param name="destination_frame" value="sick_lidar0"/>
    <param name="cloud_destination_topic" value="/zm_robot_clound"/>
    <param name="scan_destination_topic" value="/zm_robot_scan"/>
    <param name="laserscan_topics" value ="/sick_s30b/laser/scan0 /sick_s30b/laser/scan1" /> <!-- LIST OF THE LASER SCAN TOPICS TO SUBSCRIBE -->
    <param name="angle_min" value="-3.1415926"/>
    <param name="angle_max" value="3.1415926"/>
    <param name="angle_increment" value="0.0058"/>
    <param name="scan_time" value="0.1"/>
    <param name="range_min" value="0.3"/>
    <param name="range_max" value="30"/>
  </node>

  <!-- Map server -->
  <node pkg="map_server" name="map_server" type="map_server" args="$(arg map_file)"/>

  <!-- AMCL -->
  <include file="$(find zm_robot_navigation)/launch/zm_robot_amcl.launch"/>

  <!-- move_base -->
  <include file="$(find zm_robot_navigation)/launch/zm_robot_move_base.launch">
    <arg name="move_forward_only" value="$(arg move_forward_only)"/>
  </include>

  <!-- rviz -->
  <group if="$(arg open_rviz)"> 
    <node pkg="rviz" type="rviz" name="rviz" required="true"
          args="-d $(find zm_robot_navigation)/rviz/zm_robot_navigation_rviz.rviz"/>
  </group>
</launch>
